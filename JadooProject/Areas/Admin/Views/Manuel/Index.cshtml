
@model List<GetManuelQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Rezarvasyon Adımlar Alanı</div>
        </div>
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th colspan="2" class="text-center">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td><a href="/Admin/Manuel/DeleteManuel/@item.ManuelID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/Manuel/UpdateManuel/@item.ManuelID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/Admin/Manuel/CreateManuel" class="btn btn-outline-primary">Yeni Alan Ekle</a>
        </div>
    </div>
</div>





