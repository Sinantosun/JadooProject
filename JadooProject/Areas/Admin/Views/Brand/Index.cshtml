@model List<GetBrandQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="card-title"> Markalar Alanı</div>
        </div>
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th colspan="2" class="text-center">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td><img src="@item.ImageURL" style=" width:200px; height:200px" /></td>
                            <td><a href="/Admin/Brand/DeleteBrand/@item.BrandID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/Brand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/Admin/Brand/CreateBrand" class="btn btn-outline-primary">Marka Ekle</a>
        </div>
    </div>
</div>


